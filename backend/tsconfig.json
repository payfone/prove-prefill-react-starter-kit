{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "sourceMap": true,
        "strict": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "allowJs": true,        
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
          ],
        "paths": {
          "@src/*": [
            "./src/*"
          ], 
          "@src": ["src"],
            "tests/*": ["tests/*"],
        },
        "outDir": "dist",
        "removeComments": true
    },
    "compileOnSave": true,
    "include": [
        "./src/**/*",
        "./src/types/**/*",
        "tests/**/*.ts"
      ],
    "exclude": ["node_modules"]
}